{% macro frHint(params) %}
  <span {%- if params.id %} id="{{ params.id }}"{% endif %} class="fr-hint-text {%- if params.classes %} {{ params.classes }}{% endif %}"
        {%- for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
    {{ params.html | safe if params.html else params.text }}
  </span>
{% endmacro %}
