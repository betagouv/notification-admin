{% macro frErrorMessage(params) %}
  {% set visuallyHiddenText = params.visuallyHiddenText | default("Erreur") -%}

  <p {%- if params.id %} id="{{ params.id }}"{% endif %} class="fr-error-text{%- if params.classes %} {{ params.classes }}{% endif %}" {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor -%}>
    {% if visuallyHiddenText %}<span class="govuk-visually-hidden">{{ visuallyHiddenText }} :&nbsp;</span> {% endif -%}
    {{ params.html | safe if params.html else params.text }}
  </p>
{% endmacro %}
